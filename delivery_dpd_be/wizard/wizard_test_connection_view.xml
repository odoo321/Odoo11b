<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_wizard_test_connection" model="ir.ui.view">
            <field name="name">Test Connection</field>
            <field name="model">wizard.test.connection</field>
            <field name="arch" type="xml">
                <form string="Test connection">
                    <group>
                        <p>
                            Connection Successfull
                        </p>
                    </group>
                    <footer>
                        <button string="ok" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_wizard_test_connection" model="ir.actions.act_window">
            <field name="name">Test connection</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.test.connection</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
</odoo>   